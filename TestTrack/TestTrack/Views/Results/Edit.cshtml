@model TestTrack.Models.Result

@{
    ViewBag.Title = Model.ResultID > 0 ? "Edit" : "Add";
    ViewBag.BtnSaveValue = Model.ResultID > 0 ? "Save" : "Create";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Save", "Results")) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Result</legend>

        @Html.HiddenFor(model => model.ResultID)

        <div class="editor-label">
            @Html.LabelFor(model => model.TestCaseID, "TestCase")
        </div>
        <div class="editor-field">
            @Html.DropDownList("TestCaseID", String.Empty)
            @Html.ValidationMessageFor(model => model.TestCaseID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.TestRunID, "TestRun")
        </div>
        <div class="editor-field">
            @Html.DropDownList("TestRunID", String.Empty)
            @Html.ValidationMessageFor(model => model.TestRunID)
        </div>

        <p>
            <input type="submit" value="@ViewBag.BtnSaveValue" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
