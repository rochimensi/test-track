@model TestTrack.ViewModels.TestRunVM

@{
    ViewBag.Title = "Test runs";
}

<div class="page-header">
    <h1>Add Test Run</h1>
</div>

@using (Html.BeginForm("Create", "TestRuns"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        @Html.HiddenFor(model => model.TestPlanID)

        <div class="form-group">
            <div class="editor-label">
                @Html.LabelFor(model => model.Title)
                <span class="text-danger">*</span>
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
            </div>
            <div class="editor-validation-error">
                @Html.ValidationMessageFor(model => model.Title, null, new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="editor-field checkbox">
                <label>
                    @Html.EditorFor(model => model.Closed, new { @class = "form-control" }) @Html.DisplayNameFor(model => model.Closed)
                </label>
            </div>
        </div>
        <p>
            <button type="submit" class="btn btn-primary"><i class="glyphicon glyphicon-floppy-disk"></i> Save</button>
            @Html.ActionLink("Cancel", "Index", "TestRunsOnTestPlan", new { id = Model.TestPlanID }, new { @class = "btn btn-default" })
        </p>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}