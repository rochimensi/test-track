@model TestTrack.ViewModels.TestRunVM
@{
    ViewBag.Title = "Test runs";
}

@using (Html.BeginForm("Create", "TestRuns"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>TestRun</legend>

        @Html.HiddenFor(model => model.TestRunID)

        <div class="form-group">
            <div class="editor-label">
                @Html.LabelFor(model => model.Title)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Title)
            </div>
        </div>
        <div class="form-group">
            <div class="editor-label">
                @Html.LabelFor(model => model.Closed)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Closed, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Closed)
            </div>
        </div>
        <p>
            <button type="submit" class="btn btn-primary"><i class="glyphicon glyphicon-floppy-disk"></i> Save</button>
            @Html.ActionLink("Cancel", "Index", "TestRunsOnTestPlan", new { id = Model.TestPlanID}, new { @class = "btn btn-default" })
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}