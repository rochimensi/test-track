@model TestTrack.Models.TestRun

@{
    ViewBag.Title = Model.TestRunID > 0 ? "Edit" : "Add";
    ViewBag.BtnSaveValue = Model.TestRunID > 0 ? "Save" : "Create";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Save" , "TestRuns")) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>TestRun</legend>

        @Html.HiddenFor(model => model.TestRunID)

        <div class="editor-label">
            @Html.LabelFor(model => model.Title)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Title)
            @Html.ValidationMessageFor(model => model.Title)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Closed)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Closed)
            @Html.ValidationMessageFor(model => model.Closed)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.TestPlanID, "TestPlan")
        </div>
        <div class="editor-field">
            @Html.DropDownList("TestPlanID", String.Empty)
            @Html.ValidationMessageFor(model => model.TestPlanID)
        </div>

        <p>
            <input type="submit" value="@ViewBag.BtnSaveValue" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
