@model TestTrack.ViewModels.IterationVM

@{
    ViewBag.Title = "Edit Iteration";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Edit" , "Iterations")) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend></legend>

        @Html.HiddenFor(model => model.IterationID)

        <div class="editor-label">
            @Html.LabelFor(model => model.Title)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Title)
            @Html.ValidationMessageFor(model => model.Title)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.DueDate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DueDate)
            @Html.ValidationMessageFor(model => model.DueDate)
        </div>

        <div class="editor-field">
            @Html.DropDownListFor(model => model.ProjectID, Model.Projects)
            @Html.ValidationMessageFor(model => model.ProjectID)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index", "TestPlanPerIteration")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
