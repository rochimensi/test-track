@model TestTrack.ViewModels.IterationVM

@{
    ViewBag.Title = "Iterations";
}

<div class="page-header">
    <h1>Add Iteration</h1>
</div>

@using (Html.BeginForm("Create", "Iterations"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        @Html.HiddenFor(model => model.IterationID)
        <div class="form-group">
            <div class="editor-label">
                @Html.LabelFor(model => model.Title)
                <span class="text-danger">*</span>
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
            </div>
            <div class="editor-validation-error">
                @Html.ValidationMessageFor(model => model.Title, null, new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="editor-label">
                @Html.LabelFor(model => model.StartDate)
                <span class="text-danger">*</span>
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.StartDate)
            </div>
            <div class="editor-validation-error">
                @Html.ValidationMessageFor(model => model.StartDate, null, new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="editor-label">
                @Html.LabelFor(model => model.DueDate)
                <span class="text-danger">*</span>
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.DueDate)
            </div>
            <div class="editor-validation-error">
                @Html.ValidationMessageFor(model => model.DueDate, null, new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="editor-label">
                @Html.LabelFor(model => model.ProjectID)
                <span class="text-danger">*</span>
            </div>
            <div class="editor-field">
                @Html.DropDownListFor(model => model.ProjectID, Model.Projects, "Select an option", new { @class = "form-control" })
            </div>
            <div class="editor-validation-error">
                @Html.ValidationMessageFor(model => model.ProjectID, null, new { @class = "text-danger" })
            </div>
        </div>
        <p>
            <button type="submit" class="btn btn-primary"><i class="glyphicon glyphicon-floppy-disk"></i> Save</button>
            @Html.ActionLink("Cancel", "Index", "TestPlanPerIteration", null, new { @class = "btn btn-default" })
        </p>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}