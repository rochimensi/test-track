@model TestTrack.Models.Team

@{
    ViewBag.Title = Model.TeamID > 0 ? "Edit" : "Add";
    ViewBag.BtnSaveValue = Model.TeamID > 0 ? "Save" : "Create";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Save" , "Teams")) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Team</legend>

        @Html.HiddenFor(model => model.TeamID)

        <div class="editor-label">
            @Html.LabelFor(model => model.Title)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Title)
            @Html.ValidationMessageFor(model => model.Title)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ProjectID, "Project")
        </div>
        <div class="editor-field">
            @Html.DropDownList("ProjectID", String.Empty)
            @Html.ValidationMessageFor(model => model.ProjectID)
        </div>
        <p>
            <input type="submit" value="@ViewBag.BtnSaveValue" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
