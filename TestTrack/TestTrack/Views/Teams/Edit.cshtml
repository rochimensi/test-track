@model TestTrack.ViewModels.TeamVM

@{
    ViewBag.Title = "Teams";
}

<div class="page-header">
    <h1>Edit Team</h1>
</div>

@using (Html.BeginForm("Edit", "Teams"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        @Html.HiddenFor(model => model.TeamID)
        <div class="form-group">
            <div class="editor-label">
                @Html.LabelFor(model => model.Title)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Title)
            </div>
        </div>
        <div class="form-group">
            <div class="editor-field">
                @Html.DropDownListFor(model => model.ProjectID, Model.Projects, new { @class="form-control" })
                @Html.ValidationMessageFor(model => model.ProjectID)
            </div>
        </div>
        <p>
            <button type="submit" class="btn btn-primary"><i class="glyphicon glyphicon-floppy-disk"></i> Save</button>
            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
        </p>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
