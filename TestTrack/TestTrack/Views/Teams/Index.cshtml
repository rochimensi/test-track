@model IEnumerable<TestTrack.Models.Team>

@{
    ViewBag.Title = "Index";
}

<div class="jumbotron">
    <div class="container">
        <h1>Teams</h1>
        <p>Add teams for all areas that compound the Quality Assurance for a project as a whole.</p>
        <p>Divide your project in Teams.</p>
        <p>Each team can have their Test Suite. Everything organized. Focus on what is yours.</p>
        <p>By assigning test plans to your team you can easily monitor the current testing status and activity.</p>
        <p>
            @Html.ActionLink("Create New", "Create", "Teams", null, new { @class = "btn btn-primary btn-lg" })
        </p>
    </div>
</div>

@if (Model != null)
{
    <h2>Teams in @Model.First().Project.Title</h2>

    foreach (var item in Model)
    {
        <div class="row">
            <div class="col-md-4">
                @Html.DisplayFor(modelItem => item.Title)
                @Html.ActionLink("Edit", "Edit", new { id = item.TeamID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.TeamID })
            </div>
        </div>
    }
}