@model TestTrack.ViewModels.ResultsListVM

<div id="tc-@Model.TestCaseID" class="row result">
    <div class="col-md-1 tc-id">
        <p><small>@Model.TestCaseID</small></p>
    </div>
    <div class="col-md-9">
        <p><small><a href="/Results/Index/@Model.TestRunID/@Model.TestCaseID">@Model.TestCase</a></small></p>
    </div>
    <div class="col-md-2">
        @Html.DropDownListFor(model => model.SelectedState, Model.States, new { @class = "form-control " + @Model.SelectedState.ToString().ToLower(), @data_id = Model.ResultID })
    </div>
</div>