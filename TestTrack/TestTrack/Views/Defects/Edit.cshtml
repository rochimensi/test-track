@model TestTrack.ViewModels.DefectVM

@{
    ViewBag.Title = "Defect";
}

<!-- Header -->
@Html.Partial("~/Views/Shared/_Header.cshtml")

<!-- Main -->
<div class="container">
    <div class="main">
        <div class="page-header">
            <h1>Edit Defect</h1>
        </div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <fieldset>
                @Html.HiddenFor(model => model.DefectID)
                @Html.HiddenFor(model => model.TestCaseID)
                @Html.HiddenFor(model => model.TestRunID)
                @Html.HiddenFor(model => model.ResultID)
                <div class="form-group">
                    <div class="editor-label">
                        @Html.LabelFor(model => model.DefectTitle)
                    </div>
                    <div class="editor-field">
                        @Html.TextBoxFor(model => model.DefectTitle, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.DefectTitle)
                    </div>
                </div>
                <div class="form-group">
                    <div class="editor-label">
                        @Html.LabelFor(model => model.Severity)
                    </div>
                    <div class="editor-field">
                        @Html.DropDownListFor(model => model.Severity, Model.Severities, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Severity)
                    </div>
                </div>
                <div class="form-group">
                    <div class="editor-label">
                        @Html.LabelFor(model => model.Comments)
                    </div>
                    <div class="editor-field">
                        @Html.TextAreaFor(model => model.Comments, new { @class = "form-control", @cols = "80", @rows = "4" })
                        @Html.ValidationMessageFor(model => model.Comments)
                    </div>
                </div>
                <div class="form-group">
                    <div class="editor-label">
                        @Html.LabelFor(model => model.Labels)
                    </div>
                    <div class="editor-field">
                        @Html.TextBoxFor(model => model.Labels, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Labels)
                    </div>
                </div>
                <p>
                    <button type="submit" class="btn btn-primary"><i class="glyphicon glyphicon-floppy-disk"></i>Save</button>
                    <a class="btn btn-default" href="/Results/Index/@Model.TestRunID/@Model.TestCaseID">Cancel</a>
                </p>
            </fieldset>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
